  </head>

  <body>
    <header class="navbar navbar-nav navbar-right">
      <div class="container">
        <%= link_to "school app", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Help",   help_path %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div><!-- /#container -->
